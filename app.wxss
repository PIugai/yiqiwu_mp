body {
  background-color: #920106;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.card-container {
  /* height: 100vh; */
  width: 100%;
  background-color: #920106;
  padding-top: 1px;
  padding-left: 2px;
  padding-right: 2px;
  align-items: center;
} 

.global-card {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 130px;
  margin: 8px 8px 10px 4px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  border-radius: 10px;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  padding: 5px;
}

.global-card-text-activity {
  font-size: 36px;
  font-weight: bold;
  margin-top: 15px;
  text-align: center;
  text-shadow: 2px 2px 3px rgba(0,0,0,0.8);
}

.global-card-location {
  margin-top: 5px;
  text-align: center;
  text-shadow: 2px 2px 3px rgba(0,0,0,0.8);
}

.trash {
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: rgba(255, 255, 255, .4);
  border-radius: 50%;
  padding: 8px;
  position: relative;
  bottom: 27px;
  width:23px;
  height:23px;
  margin:5px;
  opacity: 0.9;
}

.card-mid-block {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: rgba(255, 255, 255, .5);
  border-radius: 5px;
  padding: 3px;
  width: 210px;
  color: black;
  position: relative;
  left: 5px;
}

.card-icon {
  height: 15px;
  width: 15px;
  margin-left: 8px;
  margin-right: 2px;
}

.card-info {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  text-shadow: none;
}
.assist-text {
  margin:15px;
  font-size:19px;
  background-color:rgba(255, 255, 255, .3);
  text-align:center;
  padding:6px;
  border-radius:10px;
  opacity: 0.7;
  color: white;
  margin-top: 0px;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.3);

}