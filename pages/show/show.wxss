.card {
  height: 200px;
  background-color: green;
  position: relative;
}
.top-block {
  padding: 1%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: white;
}
.bot-block {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.btn {
  flex-wrap: wrap;
  padding: 3%; 
  background-color:#f9d102;
  font-size: 25pt;
}

.button-hover {
color:white;
background-color:#f9d102;
}
.mid-block {
font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
display:block;
flex-direction:row;
justify-content:space-around;
font-size: 30px;
text-align: start;
margin: 5%
}
.icon {
  height: 30px;
  width: 30px;
}

.icon-lg {
  height: 50px;
  width: 50px;
}

.event-name {
  position: absolute;
  margin-right: 0;
  margin-left: 3%;
  margin-top: -3%;
  text-align: initial;
  font-size: 30px;

}
.id {
  position: relative;
  margin-right: 4%;
  margin-top: -24%;
  text-align: end;
  padding: 1%;
}
.block {
  background-color: rgba(155, 153, 153, 0.616);
  padding: 1px;
  margin: 13px;
}
.host {
  padding:4%;
}
.time {
  padding: 5px;
}
.capacity {
  padding: 5px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.description {
  padding: 10px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  margin: 6%;
}

