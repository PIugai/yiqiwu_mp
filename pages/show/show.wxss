.card {
  height: 200px;
  position: relative;
}

.card image {
   -webkit-mask:-webkit-linear-gradient(rgba(0, 0, 0, 1),rgba(0, 0, 0, 1),rgba(0, 0, 0, 0.438),rgba(0, 0, 0, 0.25));
   height: 200px;
   width: 100%;
}
.top-block {
  padding: 1%;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  color: white;
}
.bot-block {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.btn {
  flex-wrap: wrap;
  background-color:#f9d102;
  font-size: 20pt;
}

.button-hover {
color:white;
background-color:#f9d102;
}
.mid-block {
font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
display:block;
flex-direction:row;
justify-content:space-around;
font-size: 23px;
text-align: start;
margin: 4%
}

.capacity {
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.time {
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.icon {
  height: 30px;
  width: 30px;
}

.icon-lg {
  height: 40px;
  width: 40px;
}

.event-name {
  position: absolute;
  margin-right: 0;
  margin-left: 3%;
  margin-top: -25%;
  text-align: initial;
  font-size: 35px;
  text-shadow: 2px 1px 1px rgb(83, 80, 80);
  color:white;
  font-weight: bold;
}
.id {
  position: relative;
  margin-right: 4%;
  margin-top: -24%;
  text-align: end;
  padding: 1%;
}
.block {
  background-color: rgba(155, 153, 153, 0.616);
  padding: 1px;
  margin: 13px;
}
