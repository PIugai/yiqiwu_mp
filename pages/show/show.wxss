.host {
  padding:5%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 18pt;
}
.time {
  padding: 5px;
}
.capacity {
  padding: 5px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.description {
  padding: 10px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  margin: 6%;
}

.avatar 
{
  position: absolute;
  margin-left: 12%;
  width:60px;
  height:60px;
  background:black;
  box-sizing:border-box;
  border-radius:50%;
  margin-top: -4%;
}

.warning-booked {
  background-color: #f9d102;
  color: rgb(19, 158, 19);
  font-size: 20pt;
  text-align: center;
  width: 100%;
  padding: 22px 0 22px 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

}

.warning-full {
  background-color: #f9d102;
  color: #e50111;
  font-size: 20pt;
  text-align: center;
  width: 100%;
  padding: 22px 0 22px 0;

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

}

.warning-icon-booked{
  height: 30px;
  width: 30px;
  position: absolute;
  right: 8%
}

.warning-icon-full{
  height: 32px;
  width: 32px;
  position: absolute;
  right: 15%
}


