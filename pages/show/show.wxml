<view class="card" style="background-image: url('{{photo}}');"></view>

<view class="top-block">
  <!-- <image class="avatar" src="{{event.host_photo}}"></image> -->

  <view class="id">
  </view>

  <view class="event-name">
    <view>{{event.activity_type}}</view>
    <view style="font-size: 25px">@{{event.location}}</view>
  </view>
</view>


<view class="mid-block">
  <view class="time">
  <image class="icon" src="/image/calendar.png"></image>
    <text style="padding: 10%"> {{event.date}}</text>
  </view>

  <view class="time">
   <image class="icon" src="/image/clock.png"></image>
    <text style="padding: 10%"> {{event.start_time}} - {{event.end_time}}</text>
  </view>

  <view class="capacity">
   <image class="icon-lg" src="/image/work-team.png"></image>
    <text style="font-size: 25pt; padding: 20%">{{event.spots_filled}} / {{event.capacity}}</text>

  </view>

  <view class="block">
  </view>

  
</view>
   <view class="host">
   <image class="avatar" src="{{event.host_photo}}"></image>
    <text style="padding: 10%"> {{event.host_name}}</text>
  </view>
<view>

 <view class="block">
  </view>
  <view class="description">
    <text style="font-size: 17pt">{{event.description}}</text>
  </view>
</view>

<view class="bot-block">
 <view class="map-container">
  <map longitude="{{lg}}" latitude="{{lt}}" scale="{{sc}}" style="width: 100%; height: 25vh;" markers="{{mk}}"></map>
</view>
 
  <view>
    <button form-type="submit" bindtap="bindSubmit" class="btn">Count me in!</button>
  </view>

</view>
