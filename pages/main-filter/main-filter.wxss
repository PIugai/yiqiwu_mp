/****** overall ******/
.page-container {
  display: flex;
}
/****** filter ******/
.filter-container {
  display: flex;
  flex-direction: column;
  justify-content: center;  
  align-items: center;
  padding: 0px;
  position: absolute;
  left: 13px;
  z-index: 10;
  animation: filter-card 2s ease;
  animation-fill-mode: forwards;
}
@keyframes filter-card {
  from {
    transform: translateY(25px);
  }
  to {
    transform: translateY(35px);
  }
}
.button-filter {
  display: flex;
  width: 55px;
  height: 55px;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin-top: 5px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  transition: all .25s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #920106;
  font-size: 24px;
  font-weight: bold;
  border: solid #920106;
}
.button-filter-inactive {
  display: flex;
  width: 55px;
  height: 55px;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin-top: 5px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  transition: all .25s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #920106;
  font-size: 24px;
  font-weight: bold;
  opacity: 0.6;
  border: none;
}
.image-filter {
  width: 50px;
  height: 50px;
}
.button-filter-toggle {
  display: flex;
  width: 65px;
  height: 30px;
  align-items: center;
  justify-content: center;
  padding: 0px;
  position: absolute;
  left: 10px;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
  background-color: #920106;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
}
/****** map/list toggle ******/
.toggle-container {
  display: flex;
  flex-direction: column;
  justify-content: center;  
  align-items: center;
  margin-bottom: 10px;
}
.toggle-button {
  margin: 0;
  width: 30%;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.hover {
  background-color: pink;
}

/* map page */
.main-content {
  width: 100%;
}
.display {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 100%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}
.map-container {
  height: 100vh;
  overflow: hidden;
}
.cardtext-placeholder {
  font-size: 20pt;
  padding-top: 45px;
  font-style: italic;
  opacity: 0.4;
}
.text-id {
  font-size: 16px;
  text-align: left;
}
.text-activity {
  font-size: 32px;
  font-weight: bold;
  margin-top: 5px;
}
.location {
  margin-top: 5px;
}
/* list page */
.card {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 95%;
  margin: 10px auto;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  border-radius: 4px;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}

.cardtext-big {
  margin: 2%;
  font-size: 25pt;
}
.cardtext-small {
  font-size: 20pt;
}
