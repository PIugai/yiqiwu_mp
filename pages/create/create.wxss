/* pages/create/create.wxss */

.form-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
} 

.h2-header {
  font-size: 32px;
  font-weight: 300;
  color: #4c4c4c;
  text-align: center;
  padding-top: 10px;
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}

.input-label {
  font-size: 35rpx;
}

textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}

.text-area-wrap {
  padding: 15rpx 15rpx;
  margin: 10px;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}

.box {
  padding-top: 10px;
  width: 343px; 
  height: fit-content; 
  -webkit-border-radius: 8px/7px; 
  -moz-border-radius: 8px/7px; 
  border-radius: 8px/7px; 
  background-color: #ebebeb; 
  -webkit-box-shadow: 1px 2px 5px 
}