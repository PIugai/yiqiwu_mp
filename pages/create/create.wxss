.form-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  color: rgba(130, 130, 130, 1); 
  font-size: 30rpx;
  background-color: #B70107;
} 

textarea {
  width: 100%;
  height: 25px;
  margin-left:0px;
  padding-left: 0px;
}
picker {
  /* opacity: 0.8; */
}
.text-area-wrap {
  padding: 25rpx 10rpx;
  margin: 3px;
  margin-top:5px;
  margin-bottom:5px;
  background-color: rgba(255, 255, 255, 0.8); 
  /* margin-top:8px; */
  border-radius: 5px;
  border-left: 5px solid #9F9F9C;
  height: 25px;
}

.box {
  padding: 3px;
  width: 343px; 
  height: fit-content; 
  -webkit-border-radius: 8px/7px; 
  -moz-border-radius: 8px/7px; 
  border-radius: 8px/7px; 
  background-color: #ebebeb; 
  -webkit-box-shadow: 1px 2px 5px 
}