<!--index.wxml-->

<swiper indicator-dots="true" interval="{{interval}}" duration="{{duration}}">
    <swiper-item> 
      <view style="background-image: url('http://lc-OdCCcsLE.cn-n1.lcfile.com/f81bff8c8a6af3f338d6/spin-top.jpg')" class='swiper-item-bg'>
      <text class="landing-text">让运动 与众不同</text>

      </view>
    </swiper-item>
    <swiper-item>
      <view style="background-image: url('http://lc-OdCCcsLE.cn-n1.lcfile.com/14b6cf314b0fb086cd32/taijichuan.jpg')" class='swiper-item-bg'>
       <text class="landing-text">相同的选择, 不同的期待</text>
      </view>
    </swiper-item>
     <swiper-item>
      <view style="background-image: url('http://lc-OdCCcsLE.cn-n1.lcfile.com/3bc552d1eae254ac645a/dance1.png')" class='swiper-item-bg'>
       <text class="landing-text">健康之道, 从175开始</text>
      </view>
     <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="btn">Start</button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
    </swiper-item>
</swiper>
 

