/**index.wxss**/

.container{
width: 100%;
height: 400px;
display: flex;
flex-flow:row wrap;
}

swiper {
  position: relative;
  height: 100vh;
  align-items: center;
  bottom: 0px;
}
.item1
{
padding: 0;
margin: 0;
width: 100%;
height: 100%;
}

.slide-image{
  width:100%; 
  height:100%;
  object-fit: cover;
}

.btn {
  background-color: #f9d102; 
  opacity: 0.9;
  width: 60%;
  z-index: 1;
  position: absolute;
  bottom: 8%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28pt;
  height: 8%;
  color: black;
  border-radius: 25px;
  display: flex;
  line-height: inherit;
  align-items: center;
  justify-content: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.swiper-item-bg{
  height: 100vh;
  background-position: center;
}

.landing-text {
padding: 1%;
position: absolute;
color: white;
font-size: 35pt;
text-align: center;
top: 55%;
text-shadow: 2px 2px 3px rgb(78, 78, 78);
background-color:rgba(226, 226, 226, 0.623);
word-break: keep-all;
width: 100%;
}