/****** overall ******/
.page-container {
  display: flex;
}
/****** filter ******/
.filter-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  justify-content: center;  
  align-items: center;
  padding: 0px;
  position: absolute;
  left: 13px;
  z-index: 10;
  animation: filter-card 2s ease;
  animation-fill-mode: forwards;
}
@keyframes filter-card {
  from {
    transform: translateY(35px);
  }
  to {
    transform: translateY(45px);
  }
}
.button-filter {
  display: flex;
  width: 100px;
  height: 100px;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 8px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  border: solid 8px #B70107;
}
.button-filter-inactive {
  display: flex;
  width: 100px;
  height: 100px;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 8px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  opacity: 0.7;
  border: none;
}
.image-filter {
  width: 80px;
  height: 80px;
}
.button-filter-toggle {
  display: flex;
  width: 65px;
  height: 65px;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  padding: 0px;
  position: absolute;
  left: 10px;
  top: 105px;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
  background-color: #B70107;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  z-index: 10;
}

/****** map page ******/
.main-content {
  width: 100%;
}
.display {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 100%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #B70107;
  text-align: center;
  padding: 5px;
}
.map-container {
  height: 100vh;
  overflow: hidden;
  z-index: -500;
}
.cardtext-placeholder {
  font-size: 20pt;
  padding-top: 45px;
  font-style: italic;
  opacity: 0.4;
}
.text-id {
  font-size: 16px;
  text-align: left;
}
.text-activity {
  font-size: 32px;
  font-weight: bold;
  margin-top: 5px;
}
.location {
  margin-top: 5px;
}
/****** list page ******/
.card {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 95%;
  margin: 10px auto;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  border-radius: 4px;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #B70107;
  text-align: center;
  padding: 5px;
}
.cardtext-big {
  margin: 2%;
