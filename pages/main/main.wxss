/****** overall ******/
.page-container {
  display: flex;
}
/****** filter ******/
.filter-container {
  display: flex;
  flex-wrap: wrap;
  width: 90vw;
  /* height: 90vw; */
  justify-content: center;  
  align-content: center;
  align-items: center;
  padding: 0px;
  position: fixed;
  z-index: 9999;
  animation: filter-card 2s ease;
  animation-fill-mode: forwards;
  top: 125px;
  left: 3%;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 10px;
}
@keyframes filter-card {
  from {
    transform: translateY(35px);
  }
  to {
    transform: translateY(45px);
  }
}
.button-filter {
  display: flex;
  width: 19vw;
  height: 19vw;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 5px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  border: solid 8px #920106;
}
.button-filter-inactive {
  display: flex;
  width: 19vw;
  height: 19vw;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 5px;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: white;
  opacity: 0.8;
  /* border: none; */
  border: solid 8px white;
}
.image-filter {
  width: 19vw;
  height: 19vw;
}
.button-filter-toggle {
  display: flex;
  width: 65px;
  height: 65px;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin-left: 10px;
  margin-top: 10px;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
  background-color: #920106;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
}

.control {
  position: relative;
  z-index: 9999;
  height: 100vh;
  width: 100%;
  top: -20px;
}
/****** map page ******/
.main-content {
  width: 100%;
}
.display {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 100%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}
.map-container {
  height: 100vh;
  overflow: hidden;
  z-index: -500;
}
.cardtext-placeholder {
  font-size: 20pt;
  padding-top: 45px;
  font-style: italic;
  opacity: 0.4;
}
.text-id {
  font-size: 16px;
  text-align: left;
}
.text-activity {
  font-size: 32px;
  font-weight: bold;
  margin-top: 5px;
}
.location {
  margin-top: 5px;
}
/****** list page ******/
.card {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 95%;
  margin: 10px auto;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  border-radius: 4px;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}
.cardtext-big {
  margin: 2%;
  font-size: 25pt;
}
.cardtext-small {
  font-size: 20pt;
}
.pair {
  display: flex;
  justify-items: center;
}
