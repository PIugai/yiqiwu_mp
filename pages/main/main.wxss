/* map page */
.display {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 100%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}
.map-container {
  height: 100vh;
  overflow: hidden;
}
.cardtext-placeholder {
  font-size: 20pt;
  padding-top: 45px;
  font-style: italic;
  opacity: 0.4;
}
.text-id {
  font-size: 16px;
  text-align: left;
}
.text-activity {
  font-size: 32px;
  font-weight: bold;
  margin-top: 5px;
}
.location {
  margin-top: 5px;
}
/* list page */
.card {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 20vh;
  width: 95%;
  margin: 10px auto;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  border-radius: 4px;
  box-shadow:         1px 1px 1px 1px rgba(0,0,0,0.3);
  background-color: #920106;
  text-align: center;
  padding: 5px;
}

.cardtext-big {
  margin: 2%;
  font-size: 25pt;
}
.cardtext-small {
  font-size: 20pt;
}

.pair {
  display: flex;
  justify-items: center;
}

.button {
  padding-left:6%;
 padding-top:14%;
